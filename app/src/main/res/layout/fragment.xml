<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context="ru.startandroid.weather.ui.main.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="169dp"
        android:layout_height="93dp"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="388dp"
        android:fontFamily="@font/neuropoliticalrg"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:textSize="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="169dp"
        android:layout_height="30dp"
        android:layout_marginLeft="92dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="448dp"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="79dp"
        android:layout_height="91dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="388dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="340dp"
        android:fontFamily="@font/prototype"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="100dp"
        android:layout_height="102dp"
        android:layout_margin="16dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_launcher_round"
        tools:ignore="MissingConstraints" />

    <!--


    -->

    <TableLayout
        android:layout_width="337dp"
        android:layout_height="203dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card"
                android:layout_width="160dp"
                android:layout_height="42dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints"
                card_view:cardBackgroundColor="#fff">


                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dp"
                        app:srcCompat="@drawable/humidity" />


                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dip"
                        android:textColor="@color/color0"
                        android:textSize="12dp" />
                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardBackgroundColor="#fff"
                android:id="@+id/card2"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="24dp"
                        android:layout_height="21dp"
                        android:padding="0.8dp"
                        app:srcCompat="@drawable/temp_min" />

                    <TextView
                        android:id="@+id/mintemp"
                        android:layout_width="109dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dp"
                        android:textColor="@color/blue"
                        android:textSize="12dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </TableRow>


        <TableRow>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardBackgroundColor="#fff"
                android:id="@+id/card_view_speed"
                android:layout_width="114dp"
                android:layout_height="43dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="0.8dp"
                        app:srcCompat="@drawable/speed"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/speed"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:padding="0.8dip"
                        android:textColor="@color/color0"
                        android:textSize="12dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardBackgroundColor="#fff"
                android:id="@+id/card_3"
                android:layout_width="163dp"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="24dp"
                        android:layout_height="21dp"
                        android:padding="0.8dp"
                        app:srcCompat="@drawable/temp_max"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/maxtemp"
                        android:layout_width="111dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dp"
                        android:textColor="@color/red"
                        android:textSize="12dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </TableRow>

        <TableRow>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardBackgroundColor="#fff"
                android:id="@+id/card_5"
                android:layout_width="156dp"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:padding="0.8dp"
                        android:textColor="@color/color0"
                        app:srcCompat="@drawable/geolacation" />

                    <TextView
                        android:id="@+id/geolat"
                        android:layout_width="54dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dp"
                        android:textColor="@color/color0"
                        android:textSize="10dp" />


                    <TextView
                        android:id="@+id/geolon"
                        android:layout_width="58dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dp"
                        android:textColor="@color/color0"
                        android:textSize="10dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardBackgroundColor="#fff"
                android:id="@+id/card6"
                android:layout_width="114dp"
                android:layout_height="42dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dp"
                        app:srcCompat="@drawable/passure" />

                    <TextView
                        android:id="@+id/pressure"
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dip"
                        android:textColor="@color/color0"
                        android:textSize="12dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </TableRow>

        <TableRow>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardBackgroundColor="#fff"
                android:id="@+id/card7"
                android:layout_width="114dp"
                android:layout_height="42dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:padding="0.8dp"
                        app:srcCompat="@drawable/sea_level"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/sea"
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dip"
                        android:textColor="@color/color0"
                        android:textSize="12dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardBackgroundColor="#fff"
                android:id="@+id/card8"
                android:layout_width="114dp"
                android:layout_height="42dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="true"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dp"
                        app:srcCompat="@drawable/population"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/population"
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:padding="0.8dip"
                        android:textColor="@color/color0"
                        android:textSize="12dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
